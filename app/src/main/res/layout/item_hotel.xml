<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/spacing_medium"
    android:layout_marginRight="@dimen/spacing_medium"
    android:background="@android:color/white">

  <ImageView
      android:id="@+id/img_in_sale"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:adjustViewBounds="true"
      android:scaleType="fitXY"
      android:src="@mipmap/banner"/>

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/img_in_sale"
      android:layout_gravity="center"
      android:layout_marginLeft="@dimen/spacing_small"
      android:layout_marginTop="@dimen/spacing_medium">

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@id/price_text"
        android:ellipsize="middle"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:textSize="@dimen/text_body"
        tools:text="宜春|曦园柳镇"/>

    <TextView
        android:id="@+id/price_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/spacing_small"
        android:textColor="@color/price"
        android:textSize="@dimen/text_body"
        tools:text="5.9万"/>

    <LinearLayout
        android:id="@+id/ll_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name"
        android:orientation="vertical">

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="类型:"
          android:textColor="@color/text_gray"
          android:textSize="@dimen/text_small_body"/>

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="房型:"
          android:textColor="@color/text_gray"
          android:textSize="@dimen/text_small_body"/>

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="地址:"
          android:textColor="@color/text_gray"
          android:textSize="@dimen/text_small_body"/>

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="特色:"
          android:textColor="@color/text_gray"
          android:textSize="@dimen/text_small_body"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/ll_detail"
        android:layout_toRightOf="@id/ll_detail"
        android:orientation="vertical">

      <TextView
          android:id="@+id/type"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:ellipsize="marquee"
          android:focusable="true"
          android:focusableInTouchMode="true"
          android:lines="1"
          android:marqueeRepeatLimit="marquee_forever"
          android:maxEms="10"
          android:scrollHorizontally="true"
          android:textColor="@color/text_gray"
          android:textSize="@dimen/text_small_body"
          tools:text="交房时间:"/>

      <TextView
          android:id="@+id/house_type"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:ellipsize="marquee"
          android:focusable="true"
          android:focusableInTouchMode="true"
          android:lines="1"
          android:marqueeRepeatLimit="marquee_forever"
          android:scrollHorizontally="true"
          android:textColor="@color/text_gray"
          android:textSize="@dimen/text_small_body"
          tools:text="项目地址:"/>

      <TextView
          android:id="@+id/address"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:ellipsize="marquee"
          android:focusable="true"
          android:focusableInTouchMode="true"
          android:lines="1"
          android:marqueeRepeatLimit="marquee_forever"
          android:maxEms="10"
          android:scrollHorizontally="true"
          android:textColor="@color/text_gray"
          android:textSize="@dimen/text_small_body"
          tools:text="特         色:"/>


      <RelativeLayout

          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@id/ll_detail">

        <TextView
            android:id="@+id/tese"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:lines="1"
            android:marqueeRepeatLimit="marquee_forever"
            android:maxEms="10"
            android:scrollHorizontally="true"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/text_small_body"
            tools:text="特         色:"/>

        <TextView
            android:id="@+id/total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="@dimen/spacing_small"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/spacing_medium"
            android:layout_marginRight="@dimen/spacing_small"
            android:text="共有50套房源"
            android:textColor="@android:color/black"
            />
      </RelativeLayout>
    </LinearLayout>
  </RelativeLayout>
</RelativeLayout>
