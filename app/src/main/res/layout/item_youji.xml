<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/contnet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_hot_youji"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:src="@mipmap/banner" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_weight="2">

            <RelativeLayout
                android:id="@+id/user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/head"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:src="@mipmap/zaishou" />

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/head"
                    android:textSize="25sp"
                    tools:text="宜春|曦园柳镇" />
            </RelativeLayout>


            <TextView
                android:id="@+id/shuoshuo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/user"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:maxLines="2"
                tools:text="交房时间交房时间交房时间交房交房时间交房时间" />

            <TextView
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/shuoshuo"
                android:layout_marginTop="5dp"
                android:drawableLeft="@mipmap/iconfont_hongbao"
                android:textColor="#ff0000"
                android:textSize="18sp"
                tools:text="奖金6920" />

            <TextView
                android:id="@+id/pinglun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/shuoshuo"
                android:layout_marginTop="5dp"
                android:drawableLeft="@mipmap/iconfont_dianzan"
                tools:text="6920" />

            <TextView
                android:id="@+id/dianzhang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/shuoshuo"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_toLeftOf="@id/pinglun"
                android:drawableLeft="@mipmap/iconfont_dianzan"
                tools:text="6920" />

        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
