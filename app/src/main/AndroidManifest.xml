<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.aishang.app">

  <uses-permission android:name="android.permission.INTERNET"/>
  <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

  <application
      android:allowBackup="false"
      android:icon="@mipmap/ic_launcher"
      android:label="@string/app_name"
      android:name=".BoilerplateApplication"
      android:theme="@style/AppTheme"
      tools:replace="android:allowBackup">
    <activity
        android:label="@string/app_name"
        android:name=".ui.main.MainActivity"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        android:windowSoftInputMode="stateHidden">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>

        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>

    <service android:name=".data.SyncService"/>

    <receiver
        android:enabled="false"
        android:name=".data.SyncService$SyncOnConnectionAvailable">
      <intent-filter>
        <action android:name="android.net.conn.CONNECTIVITY_CHANGE"/>
      </intent-filter>
    </receiver>

    <activity android:name=".ui.insale.InSaleActivity"/>
    <activity android:name=".ui.insaleDetail.InSaleDetailActivity"/>
    <activity android:name=".ui.hotel.HotelListActivity">
    </activity>
  </application>

</manifest>
