<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:paddingTop="@dimen/padding_stutas_bar"
    >

  <android.support.v7.widget.Toolbar
      android:id="@+id/toolbar"
      android:layout_width="match_parent"
      android:layout_height="?attr/actionBarSize"
      android:layout_alignParentTop="true"
      android:background="@color/primary"
      app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
      app:theme="@style/ToolBarStyle"
      >

    <TextView
        android:id="@+id/toolbar_title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/dujiawu"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_title"
        />
  </android.support.v7.widget.Toolbar>

  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_below="@id/toolbar"
      android:background="@android:color/white"
      tools:context="com.aishang.app.ui.CanTuan.CanTuanFragment"
      >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

      <ImageView
          android:id="@+id/banner"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:scaleType="centerCrop"
          android:src="@mipmap/dujiaowujiaohuan"
          />

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="@dimen/spacing_medium"
          android:layout_marginTop="@dimen/spacing_medium"
          android:gravity="center"
          android:text="度假屋介绍"
          android:textColor="@color/text_gray"
          android:textSize="@dimen/text_title"
          />

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="@dimen/spacing_medium"
          android:layout_marginTop="@dimen/spacing_medium"
          android:gravity="left"
          android:lineSpacingExtra="@dimen/spacing_medium"
          android:text="爱尚旅居——中国首个共权度假屋共享换住平台，由重庆耘目实业有限公司倾力打造,提供共权度假屋网上展示、申购、预订、换住以及出租"
          android:textColor="@color/text_gray"
          android:textSize="@dimen/text_body"
          />

      <View
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:layout_marginBottom="@dimen/spacing_large"
          android:layout_marginLeft="@dimen/spacing_medium"
          android:layout_marginRight="@dimen/spacing_medium"
          android:layout_marginTop="@dimen/spacing_medium"
          android:background="@color/line"
          />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="@dimen/spacing_medium"
          android:drawableLeft="@mipmap/line_blue"
          android:drawablePadding="@dimen/spacing_small"
          android:text="基本资料"
          android:textColor="@color/text_gray"
          android:textSize="@dimen/text_title"
          />

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="@dimen/spacing_large"
          android:layout_marginRight="@dimen/spacing_medium"
          android:orientation="horizontal"
          >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:ems="4"
            android:gravity="left|center_vertical"
            android:text="产权人"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/text_body"
            />
        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/owner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_medium"
            android:layout_marginRight="@dimen/spacing_medium"
            android:layout_marginTop="@dimen/spacing_medium"
            android:hint="产权人"
            android:singleLine="true"
            android:textSize="@dimen/text_body"
            app:met_clearButton="true"
            app:met_floatingLabel="none"
            app:met_textColorHint="@color/primary"
            />
      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="@dimen/spacing_large"
          android:layout_marginRight="@dimen/spacing_medium"
          android:orientation="horizontal"
          >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:ems="4"
            android:gravity="left|center_vertical"
            android:text="身份证号"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/text_body"
            />
        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/id_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_medium"
            android:layout_marginRight="@dimen/spacing_medium"
            android:layout_marginTop="@dimen/spacing_medium"
            android:hint="身份证号"
            android:inputType="numberSigned"
            android:singleLine="true"
            android:textSize="@dimen/text_body"
            app:met_clearButton="true"
            app:met_floatingLabel="none"
            app:met_textColorHint="@color/primary"
            />

      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="@dimen/spacing_large"
          android:layout_marginRight="@dimen/spacing_medium"
          android:orientation="horizontal"
          >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:ems="4"
            android:gravity="left|center_vertical"
            android:text="物业地址"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/text_body"
            />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/house_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_medium"
            android:layout_marginRight="@dimen/spacing_medium"
            android:layout_marginTop="@dimen/spacing_medium"
            android:hint="物业地址"
            android:inputType="text"
            android:singleLine="true"
            android:textSize="@dimen/text_body"
            app:met_clearButton="true"
            app:met_floatingLabel="none"
            app:met_textColorHint="@color/primary"
            />


      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="@dimen/spacing_large"
          android:layout_marginRight="@dimen/spacing_medium"
          android:orientation="horizontal"
          >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:ems="4"
            android:gravity="left|center_vertical"
            android:text="户型"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/text_body"
            />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/room_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_medium"
            android:layout_marginRight="@dimen/spacing_medium"
            android:layout_marginTop="@dimen/spacing_medium"
            android:gravity="top"
            android:hint="户型"
            android:inputType="text"
            android:textSize="@dimen/text_body"
            app:met_floatingLabel="none"
            app:met_textColorHint="@color/primary"
            />


      </LinearLayout>
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="@dimen/spacing_large"
          android:layout_marginRight="@dimen/spacing_medium"
          android:orientation="horizontal"
          >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:ems="4"
            android:gravity="left|center_vertical"
            android:text="面积"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/text_body"
            />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_medium"
            android:layout_marginRight="@dimen/spacing_medium"
            android:layout_marginTop="@dimen/spacing_medium"
            android:gravity="top"
            android:hint="面积"
            android:inputType="numberDecimal"
            android:textSize="@dimen/text_body"
            app:met_floatingLabel="none"
            app:met_textColorHint="@color/primary"
            />


      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="@dimen/spacing_large"
          android:layout_marginRight="@dimen/spacing_medium"
          android:orientation="horizontal"
          >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:ems="4"
            android:gravity="left|center_vertical"
            android:text="联系电话"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/text_body"
            />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/contactsPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_medium"
            android:layout_marginRight="@dimen/spacing_medium"
            android:layout_marginTop="@dimen/spacing_medium"
            android:gravity="top"
            android:hint="联系电话"
            android:inputType="phone"
            android:textSize="@dimen/text_body"
            app:met_floatingLabel="none"
            app:met_textColorHint="@color/primary"
            />

      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="@dimen/spacing_large"
          android:layout_marginRight="@dimen/spacing_medium"
          android:orientation="horizontal"
          >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:ems="4"
            android:gravity="left|center_vertical"
            android:text="邮箱"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/text_body"
            />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/Email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_medium"
            android:layout_marginRight="@dimen/spacing_medium"
            android:layout_marginTop="@dimen/spacing_medium"
            android:gravity="top"
            android:hint="邮箱"
            android:inputType="textEmailAddress"
            android:textSize="@dimen/text_body"
            app:met_floatingLabel="none"
            app:met_textColorHint="@color/primary"
            />
      </LinearLayout>

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="@dimen/spacing_medium"
          android:layout_marginRight="@dimen/spacing_medium"
          android:layout_marginTop="@dimen/spacing_large"
          android:drawableLeft="@mipmap/line_blue"
          android:drawablePadding="@dimen/spacing_small"
          android:text="房屋设备"
          android:textColor="@color/text_gray"
          android:textSize="@dimen/text_title"
          android:textStyle="bold"
          />
      <View
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:layout_marginBottom="@dimen/spacing_large"
          android:layout_marginLeft="@dimen/spacing_medium"
          android:layout_marginRight="@dimen/spacing_medium"
          android:layout_marginTop="@dimen/spacing_medium"
          android:background="@color/line"
          />
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="@dimen/spacing_medium"
          android:layout_marginRight="@dimen/spacing_medium"
          android:text="电器类:"
          android:textSize="@dimen/text_small_body"
          />

      <com.aishang.app.widget.NonScrollGridView
          android:id="@+id/facilitesType1"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="@dimen/spacing_large"
          android:layout_marginRight="@dimen/spacing_medium"
          android:numColumns="3"
          />
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="@dimen/spacing_medium"
          android:layout_marginRight="@dimen/spacing_medium"
          android:layout_marginTop="@dimen/spacing_medium"
          android:text="家具类:"
          android:textSize="@dimen/text_small_body"
          />

      <com.aishang.app.widget.NonScrollGridView
          android:id="@+id/facilitesType2"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="@dimen/spacing_large"
          android:layout_marginRight="@dimen/spacing_medium"
          android:numColumns="3"
          android:verticalSpacing="@dimen/spacing_medium"
          android:paddingBottom="@dimen/spacing_xlarge"
          />
    </LinearLayout>
  </ScrollView>
</RelativeLayout>
