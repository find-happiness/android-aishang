<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.aishang.app">

  <uses-permission android:name="android.permission.INTERNET"/>
  <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
  <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

  <application
      android:allowBackup="false"
      android:icon="@mipmap/ic_launcher"
      android:name=".BoilerplateApplication"
      android:theme="@style/AppTheme"
      tools:replace="android:allowBackup">
    <activity
        android:label="@string/app_name"
        android:name=".ui.main.MainActivity"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        android:windowSoftInputMode="stateHidden">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>

        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>

    <service android:name=".data.SyncService"/>
    <service android:name=".util.DownloadService"/>

    <receiver
        android:enabled="false"
        android:name=".data.SyncService$SyncOnConnectionAvailable">
      <intent-filter>
        <action android:name="android.net.conn.CONNECTIVITY_CHANGE"/>
      </intent-filter>
    </receiver>

    <activity android:name=".ui.insale.InSaleActivity"/>
    <activity android:name=".ui.insaleDetail.InSaleDetailActivity"/>
    <activity android:name=".ui.hotel.HotelListActivity"/>
    <activity
        android:name=".ui.HotelDetail.HotelDetailActivity"
        android:theme="@style/DetailTheme"/>
    <activity android:name=".ui.login.LoginActivity"/>
    <activity android:name=".ui.MemberCenter.MemberCenterActivity"/>
    <activity android:name=".ui.CashWithDrawApply.CashWithDrawApplyActivity"/>
    <activity android:name=".ui.BrokerCenter.BrokerCenterActivity"/>
    <activity
        android:name=".ui.RecommenCustomer.RecommenCustomerActivity"
        android:windowSoftInputMode="stateHidden">
    </activity>
    <activity android:name=".ui.MyOrder.MyOrderActivity"/>
    <activity android:name=".ui.MyHouse.MyHouseActivity"/>
    <activity android:name=".ui.MyBuyAndSale.BuyAndSaleActivity"/>
    <activity android:name=".ui.ChangePassword.ChangePasswordActivity"/>
    <activity android:name=".ui.bank.bankActivity"/>
    <activity android:name=".ui.TravelFavorites.TravelFavoritesActivity"/>
    <activity android:name=".ui.AccountCenter.AccountCenterActivity"/>
    <activity android:name=".ui.edit.EditActivity"/>
    <activity android:name=".ui.Setting.SettingActivity"/>
    <activity android:name=".ui.suggestion.SuggestionActivity"/>
    <activity android:name=".ui.about.AboutActivity"/>
    <activity
        android:name=".ui.guide.GuideActivity"
        android:theme="@android:style/Theme.Light.NoTitleBar.Fullscreen"/>
    <activity android:name=".ui.TravelList.TravelListActivity"/>
    <activity android:name=".ui.ProjectJoint.ProjectJointActivity"/>
    <activity android:name=".ui.register.RegisterActivity"/>
    <activity android:name=".ui.ForgetPossword.ForgetPosswordActivity"/>
    <activity android:name=".ui.KanFanTuan.KanFanTuanActivity"/>
    <activity android:name=".ui.TravelDetail.TravelDetailActivity">
    </activity>
    <activity android:name=".ui.about.KnowWeActivity">
