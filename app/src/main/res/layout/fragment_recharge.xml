<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    >

  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="@dimen/spacing_large"
      android:layout_marginRight="@dimen/spacing_large"
      android:layout_marginTop="@dimen/spacing_medium"
      android:text="重庆爱旅科技有限公司"
      android:textColor="@android:color/black"
      android:textSize="@dimen/text_large_body"
      />

  <View
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:layout_marginTop="@dimen/spacing_medium"
      android:background="@color/space_line"
      />


  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="@dimen/spacing_large"
      >

    <TextView
        android:id="@id/hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="@string/bank"
        android:textColor="@color/gray"
        android:textSize="@dimen/text_body"
        />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/spacing_small"
        android:layout_toRightOf="@id/hint"
        android:focusable="false"
        android:hint="中国银行"
        android:singleLine="true"
        android:textSize="@dimen/text_body"
        app:met_hideUnderline="true"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/edit"
        android:layout_marginTop="@dimen/spacing_large"
        android:background="@color/space_line"
        />
  </RelativeLayout>

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="@dimen/spacing_large"
      >

    <TextView
        android:id="@id/hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="@string/dui_fang_zhan_hao"
        android:textColor="@color/gray"
        android:textSize="@dimen/text_body"
        />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/dui_fang_zhan_hao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/spacing_small"
        android:layout_toRightOf="@id/hint"
        android:focusable="false"
        android:hint="500112235651000"
        android:singleLine="true"
        android:textSize="@dimen/text_body"
        app:met_hideUnderline="true"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/dui_fang_zhan_hao"
        android:layout_marginTop="@dimen/spacing_large"
        android:background="@color/space_line"
        />
  </RelativeLayout>


  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="@dimen/spacing_large"
      >

    <TextView
        android:id="@id/hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="@string/chong_zi_jin_e"
        android:textColor="@color/gray"
        android:textSize="@dimen/text_body"
        />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/chong_zi_jin_e"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/spacing_small"
        android:layout_toRightOf="@id/hint"
        android:focusable="false"
        android:hint="@string/chong_zi_jin_e"
        android:singleLine="true"
        android:textSize="@dimen/text_body"
        app:met_hideUnderline="true"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/chong_zi_jin_e"
        android:layout_marginTop="@dimen/spacing_large"
        android:background="@color/space_line"
        android:visibility="invisible"
        />
  </RelativeLayout>

  <View
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:layout_marginTop="@dimen/spacing_medium"
      android:background="@color/space_line"
      />

  <View
      android:layout_width="match_parent"
      android:layout_height="@dimen/spacing_large"
      android:background="@color/space"
      />

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      >

    <TextView
        android:id="@id/hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/spacing_large"
        android:text="@string/chong_zi_jin_e"
        android:textColor="@color/gray"
        android:textSize="@dimen/text_body"
        />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/edit_jin_e"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/spacing_small"
        android:layout_toRightOf="@id/hint"
        android:focusable="false"
        android:hint="@string/chong_zi_jin_e"
        android:singleLine="true"
        android:textSize="@dimen/text_body"
        app:met_hideUnderline="true"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/edit_jin_e"
        android:layout_marginTop="@dimen/spacing_large"
        android:background="@color/space_line"
        />
  </RelativeLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/space"
      android:paddingBottom="@dimen/spacing_large">

    <Button
        android:id="@+id/submint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spacing_large"
        android:layout_marginRight="@dimen/spacing_large"
        android:layout_marginTop="@dimen/spacing_large"
        android:background="@color/primary"
        android:paddingBottom="@dimen/spacing_medium"
        android:paddingTop="@dimen/spacing_medium"
        android:text="确认充值"
        android:textColor="@color/white"
        android:textSize="@dimen/text_large_body"/>
  </LinearLayout>

</LinearLayout>
